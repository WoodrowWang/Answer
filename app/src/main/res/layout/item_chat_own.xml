<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/chat_time_own"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="22:22"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_edit_margin"
        android:layout_marginStart="@dimen/chat_text_margin">

        <ImageView
            android:id="@+id/chat_head_own"
            android:layout_width="@dimen/chat_text_height"
            android:layout_height="@dimen/chat_text_height"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/chat_edit_margin"
            android:layout_marginTop="@dimen/chat_edit_margin"
            android:background="@drawable/ic_menu_gallery"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/chat_edit_margin"
            android:layout_marginTop="@dimen/chat_edit_margin"
            android:layout_toStartOf="@id/chat_head_own"
            app:cardBackgroundColor="@color/colorChatMe"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/chat_text_own"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="@dimen/chat_text_height"
                android:minWidth="@dimen/chat_text_width"
                android:padding="8dp"
                android:text="mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm"
                android:textColor="@color/colorChatText"
                android:textSize="@dimen/chat_text_size"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>